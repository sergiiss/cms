<div>
  <%= form_for @article do |f| %>
    <div class="table-row">
      <span class="table-cell"><%= f.label 'Article title' %></span>
      <span class="table-cell"><%= f.text_field :title %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"><%= f.label 'Фото статьи' %></span>
      <span class="table-cell"><%= f.file_field :image %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"><%= f.label 'Description' %></span>
      <span class="table-cell"><%= f.text_field :description %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"><%= f.label 'URL' %></span>
      <span class="table-cell"><%= f.text_field :slug %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"><%= f.label 'Show link' %></span>
      <span class="table-cell"><%= f.text_field :menu_label %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"><%= f.label 'H1' %></span>
      <span class="table-cell"><%= f.text_field :h1 %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"><%= f.label 'Content' %></span>
      <span class="table-cell"><%= f.text_area :content %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"><%= f.label 'Published_at' %></span>
      <span class="table-cell"><%= f.datetime_select :published_at, default: Time.now %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"><%= f.label 'Priority' %></span>
      <span class="table-cell"><%= f.number_field :priority %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"></span>
      <span class="table-cell" id="button"><%= f.submit 'Save' %></span>
    </div>
  <% end %>
</div>
